{
  "name": "lsp-mcp",
  "version": "0.1.0",
  "description": "LSP-MCP: Model Context Protocol plugin for Claude Code with Tree-sitter AST parsing and vector database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "lsp-mcp": "./bin/lsp-mcp.js"
  },
  "files": [
    "dist",
    "bin",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance/benchmark.test.ts --testTimeout=900000 --runInBand",
    "perf:generate": "ts-node tests/performance/generate-large-project.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "version": "node scripts/update-changelog.js && git add CHANGELOG.md",
    "prepare": "npm run build || true",
    "postinstall": "husky install || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "lsp",
    "tree-sitter",
    "ast",
    "vector-database",
    "semantic-search",
    "code-search",
    "arduino",
    "platformio"
  ],
  "author": {
    "name": "LSP-MCP Contributors"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/windschord/lsp-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/windschord/lsp-mcp/issues"
  },
  "homepage": "https://github.com/windschord/lsp-mcp#readme",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.31",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@babel/helper-validator-identifier": "^7.28.5",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/chokidar": "^1.7.5",
    "@types/marked": "^5.0.2",
    "@xenova/transformers": "^2.17.2",
    "@zilliz/milvus2-sdk-node": "^2.4.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "ignore": "^7.0.5",
    "marked": "^16.4.1",
    "openai": "^6.7.0",
    "tree-sitter": "^0.22.1",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-go": "^0.23.1",
    "tree-sitter-java": "^0.23.2",
    "tree-sitter-python": "^0.23.2",
    "tree-sitter-rust": "^0.23.0",
    "tree-sitter-typescript": "^0.23.0",
    "voyageai": "^0.0.8"
  }
}
